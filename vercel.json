{
  "version": 2,
  "env": {
    "NODE_ENV": "production"
  },
  "rewrites": [
    { "source": "/api/auth/:action", "destination": "/api/auth" },
    { "source": "/api/rooms/:roomId/:action", "destination": "/api/rooms" },
